<Window x:Class="ScriptDomVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScriptDomVisualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <Label >Type your query and then ctrl+enter to parse....</Label>
            <TextBlock Margin="10,5,0,0">           
                <Hyperlink NavigateUri="mailto:ed@agilesql.co.uk" RequestNavigate="Hyperlink_RequestNavigate">ed@agilesql.co.uk</Hyperlink>
            </TextBlock>
        </WrapPanel>
        
        <RichTextBox Grid.Row="1" x:Name="InputBox" AcceptsReturn="true" KeyUp="UIElement_OnKeyUp" VerticalScrollBarVisibility="Auto"></RichTextBox>
        <TextBox Grid.Row="2" x:Name="Errors" IsReadOnly="true" VerticalScrollBarVisibility="Auto"></TextBox>
        <TreeView Grid.Row="3" x:Name="Results"></TreeView>

    </Grid>
</Window>
